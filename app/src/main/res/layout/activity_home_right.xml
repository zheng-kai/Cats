<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:divider="@color/grey"
    android:showDividers="middle"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <q.rorbin.verticaltablayout.VerticalTabLayout
        android:id="@+id/vtl_home_right"
        app:tab_height="65dp"
        app:indicator_color="@color/colorPrimaryDark"
        app:indicator_width="3dp"
        app:tab_mode="scrollable"
        android:layout_width="80dp"
        android:layout_height="match_parent" />
    <LinearLayout
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        android:divider="@color/grey"
        android:showDividers="middle"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:layout_margin="10dp"
            android:id="@+id/fl_home_right"
            android:layout_weight="5"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            />
        <android.support.constraint.ConstraintLayout
            android:orientation="vertical"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <android.support.v7.widget.RecyclerView
                android:layout_margin="10dp"
                android:padding="10dp"
                android:id="@+id/rv_home_right_selected"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/btn_home_right_confirm"
                />

            <Button
                android:text="确定"
                android:textColor="@color/white"
                android:textSize="19sp"
                android:background="@drawable/btn_background"
                android:layout_margin="10dp"
                android:id="@+id/btn_home_right_confirm"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="40dp"/>
        </android.support.constraint.ConstraintLayout>
    </LinearLayout>

</LinearLayout>